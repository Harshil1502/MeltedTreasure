@model MvcCandle.Models.CandleShapeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Candles" asp-action="Index" method="get">
    <p>
        <select asp-for="CandleShape" asp-items="Model.Shapes">
            <option value="">All</option>
        </select>

        Fragrance: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table bg-dark text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candles[0].Fragrance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candles[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candles[0].Shape)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candles[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candles[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candles[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Candles) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fragrance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shape)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
